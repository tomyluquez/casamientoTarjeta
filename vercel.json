{
    "version": 2,
    "builds": [
      {
        "src": "/package.json", 
        "use": "@vercel/static-build", 
        "config": {
          "distDir": "frontend/build" 
        }
      },
      {
        "src": "backend/index.js", 
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)", 
        "dest": "backend/index.js" 
      },
      {
        "src": "/(.*)", 
        "dest": "frontend/build/$1",
        "cleanUrls": true, 
        "headers": {
          "Cache-Control": "public, max-age=0, must-revalidate" 
        }
      }
    ]
  }
  